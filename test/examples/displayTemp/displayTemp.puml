!if ($PUMVarShowInterfaces)
interface "temp_dC" as temp_dC_displayTemp
temp_dC_displayTemp )--> displayTemp
!endif

!if ($PUMVarShowBody)
component displayTemp <<block>>  {
    !if ($PUMVarShowBodyInternals)
    [display]
    [conversion]
    !endif
